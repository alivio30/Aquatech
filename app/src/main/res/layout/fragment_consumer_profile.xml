                android:text="@string/tank_number"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <!-- Pump Number -->
            <TextView
                android:id="@+id/textPumpNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_300sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:text="@string/_00000"
                android:textColor="@color/primary_text"
                android:background="@null"/>

            <ImageView
                android:src="@android:drawable/divider_horizontal_dark"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginTop="@dimen/_327sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_290sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/pump_number"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <!-- Line Number -->
            <TextView
                android:id="@+id/textLineNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_340sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:text="@string/_00000"
                android:textColor="@color/primary_text"
                android:background="@null"/>

            <ImageView
                android:src="@android:drawable/divider_horizontal_dark"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginTop="@dimen/_366sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_330sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/line_number"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

            <!-- Meter Stand -->
            <TextView
                android:id="@+id/textMeterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_380sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:text="@string/_00000"
                android:textColor="@color/primary_text"
                android:background="@null"/>

            <ImageView
                android:src="@android:drawable/divider_horizontal_dark"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginTop="@dimen/_406sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_370sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/meter_stand"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

        </FrameLayout>
        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:background="@color/primary"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/frameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>