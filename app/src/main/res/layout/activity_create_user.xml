<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEmpPage.CreateUser">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_water_drop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_100sdp"
        android:translationX="-32dp"
        android:translationY="-32dp"
        android:background="@drawable/circle_design_top"
        tools:ignore="MissingConstraints" />
    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_180sdp"
        android:translationX="-32dp"
        android:translationY="-32dp"
        android:background="@drawable/circle_design"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSignOut"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/background_design_circle"
        android:padding="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"/>

    <ImageView
        android:id="@+id/imageMessenger"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_23sdp"
        android:src="@drawable/messenger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_85sdp"
            android:text="Create User Account"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonConsumer"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="@string/consumer"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_60sdp"/>

        <Button
            android:id="@+id/buttonMeterReader"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="@string/meter_reader_"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buttonAdmin"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="@string/admin"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_60sdp"/>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/emp_page" />
</androidx.constraintlayout.widget.ConstraintLayout>