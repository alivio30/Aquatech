<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentEmpPage.ReaderProfileFragment">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_water_drop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSignOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_design_circle"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"/>

    <ImageView
        android:id="@+id/imageLogout"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogout">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/transparent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_content_bottom_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_id"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/textEmployeeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/primary_text"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/transparent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_content_bottom_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS :"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="@string/cubacub"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/primary_text"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/transparent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_content_bottom_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_number__"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/textContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09151709843"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/primary_text"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@android:color/transparent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_content_bottom_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jo_gmail_com"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/primary_text"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:background="@color/primary"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/LinearContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>